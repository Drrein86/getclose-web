{
  "expo": {
    "name": "GetClose - חנות האופנה שלך",
    "slug": "getclose-native",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.getclose.native"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.getclose.native"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "getclose",
    "platforms": ["ios", "android", "web"],
    "extra": {
      "eas": {
        "projectId": "getclose-native-app"
      }
    }
  }
}
